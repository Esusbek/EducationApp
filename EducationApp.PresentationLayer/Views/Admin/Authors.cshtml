@using EducationApp.BusinessLogicLayer.Models.PrintingEditions
@using EducationApp.BusinessLogicLayer.Models.Authors
@using EducationApp.BusinessLogicLayer.Models.ViewModels
@model AuthorsViewModel
@{
    ViewData["Title"] = "Authors list";
}
<table class="table">
    <thead>
        <tr>
            <th>Author id</th>
            <th>Author name</th>
            <th>Author works</th>
        </tr>
    </thead>
    <tbody>
        @foreach (AuthorModel author in Model.Authors)
        {
            <tr>
                <td>@author.Id</td>
                <td>@author.Name</td>
                <td>
                    @foreach (PrintingEditionModel edition in author.PrintingEditions)
                    {
                        <p>@edition.Title</p>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="pages">
    <div class="filler"></div>
    @Html.ActionLink("previous page", "Authors", "Admin", new { page = Model.CurrentPage - 1 }, new { id = "previousPage" })
    <span>Page @Model.CurrentPage/ @Model.LastPage</span>
    @Html.ActionLink("next page", "Authors", "Admin", new { page = Model.CurrentPage + 1 }, new { id = "nextPage" })
</div>