@using EducationApp.BusinessLogicLayer.Models.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-container" id="login">
    <div class="image"><img src="/img/person-icon.png" alt="icon" /></div>
    <div class="signin-header">
        <span>Sign-In</span>
    </div>

    <div id="loginForm">
        <form asp-action="Login" asp-controller="Admin" method="post">
            <label asp-for="UserName"></label>
            <input type="text" asp-for="UserName" id="UserName" />
            <label asp-for="Password"></label>
            <input type="text" asp-for="Password" id="Password" />
            <div class="button" id="loginButton">
                <button type="submit">Login</button>
            </div>
        </form>
    </div>
</div>

