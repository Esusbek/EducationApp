@using EducationApp.BusinessLogicLayer.Models.ViewModels
@model ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}
<div class="profile-container">
    <h2>My profile</h2>

    <div class="profile-images">
        <div class="image"><img src="/img/person-icon.png" alt="icon" /></div>
        <div class="filler"></div>
        <div class="image edit" id="editStart" style="display:block">
            <img src="/img/pencil.png" alt="edit" id="edit">
        </div>
        <div class="image" id="back" style="display:none">
            <img src="/img/back.png" alt="edit">
        </div>
    </div>
    <div id="userInfo">
        @using (Html.BeginForm("UpdateUser", "Admin", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.User.Id)
            @Html.LabelFor(model => model.User.UserName)
            @Html.TextBoxFor(model => model.User.UserName, new { @disabled = "disabled" })
            @Html.LabelFor(model => model.User.Email)
            @Html.TextBoxFor(model => model.User.Email, new { @disabled = "disabled" })
            @Html.LabelFor(model => model.User.FirstName)
            @Html.TextBoxFor(model => model.User.FirstName, new { @disabled = "disabled" })
            @Html.LabelFor(model => model.User.LastName)
            @Html.TextBoxFor(model => model.User.LastName, new { @disabled = "disabled" })
            <div class="button" id="saveChanges" style="display:none">
                <button type="submit">Save changes</button>
            </div>
        }
    </div>
    <div class="button">
        <button id="changePasswordStart" style="display:block">Change password</button>
    </div>
    <div id="changePasswordForm" style="display:none">
        @using (Html.BeginForm("ChangePassword", "Admin", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.User.Id)
            @Html.LabelFor(model => model.OldPassword)
            @Html.TextBoxFor(model => model.OldPassword)
            @Html.LabelFor(model => model.NewPassword)
            @Html.TextBoxFor(model => model.NewPassword)
            @Html.LabelFor(model => model.ConfirmPassword)
            @Html.TextBoxFor(model => model.ConfirmPassword)
            <div class="button" id="changePasswordBtn">
                <button type="submit">Change password</button>
            </div>
        }
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#editStart").click(function () {
                document.getElementById("editStart").style.display = "none";
                document.getElementById("back").style.display = "block";
                document.getElementById("changePasswordStart").style.display = "none";
                document.getElementById("saveChanges").style.display = "block";
                document.getElementById("User_FirstName").disabled = false;
                document.getElementById("User_LastName").disabled = false;
            });
            $("#back").click(function () {
                document.getElementById("back").style.display = "none";
                document.getElementById("editStart").style.display = "block";
                document.getElementById("changePasswordStart").style.display = "block";
                document.getElementById("saveChanges").style.display = "none";
                document.getElementById("changePasswordForm").style.display = "none";
                document.getElementById("userInfo").style.display = "block";
                document.getElementById("User_FirstName").disabled = true;
                document.getElementById("User_LastName").disabled = true;
            });
            $("#changePasswordStart").click(function () {
                document.getElementById("editStart").style.display = "none";
                document.getElementById("back").style.display = "block";
                document.getElementById("changePasswordForm").style.display = "block";
                document.getElementById("changePasswordStart").style.display = "none";
                document.getElementById("userInfo").style.display = "none";
            });
        });
    </script>
}
